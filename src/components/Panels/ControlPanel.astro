---
import Panel from "./Panel.astro";
import DateTimeClock from "../DateTimeClock";

const { class: className } = Astro.props;
---

<Panel class:list={[className]}>
	<div class="h-full flex items-center">
		<div class="flex w-full space-x-4 justify-center">

			<p class="text-2xl md:text-5xl lg:text-6xl font-light">
				<DateTimeClock client:only="react" />
			</p>
		</div>
	</div>
</Panel>
