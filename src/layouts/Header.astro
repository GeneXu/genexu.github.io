---
import { Icon } from "astro-icon";
import { defaultLanguage } from "../i18n/languages";
import ThemeToggle from "../components/ThemeToggle.astro";
import LanguageSwitch from "../components/LanguageSwitch.astro";
import { getLangFromUrl } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
let home = "/";
if (lang && lang !== defaultLanguage) home = `/${lang}/`;
---

<header class="py-2 mb-4 w-full shadow-md bg-white dark:bg-slate-800 border-b border-slate-200 dark:border-slate-700">
	<nav class="container flex mx-auto py-2 px-2 justify-between">
		<!-- <div class="flex-1"></div> -->
		<div class="flex  justify-center">
			<a href={home}>
				<div class="flex items-center space-x-1">
					<Icon pack="mdi" name="home-circle-outline" width="28" height="28" />
					<span class=" text-xl font-light">GENEX.IO</span>
				</div>
			</a>
		</div>
		<div class="flex flex-1 justify-end items-center space-x-3">
			<LanguageSwitch />
			<ThemeToggle size={36} />
		</div>
	</nav>
</header>
